<Window x:Class="SPIL.IGUConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IGU Configurator" Height="800" Width="1400"
        KeyDown="MainWindow_KeyDown" 
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Main Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Configurator Input -->
        <!--#region -->
        <Grid Grid.Column="0" Margin="0 6 0 0">

            <Grid.RowDefinitions>
                <RowDefinition Height=".3*"/>
                <RowDefinition Height="2.5*"/>
                <RowDefinition Height="2.5*"/>
                <RowDefinition Height="2.5*"/>
                <RowDefinition Height="2.5*"/>
                <RowDefinition Height=".7*"/>
            </Grid.RowDefinitions>

            <!-- Header Row for Glass Configuration-->
            <!--#region -->
            <Grid Grid.Row="0" Height="30" VerticalAlignment="Top">                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3.5*"/>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Type" 
                                FontSize="12" 
                                FontWeight="SemiBold" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"/>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="1">
                    <TextBlock Text="Thickness" 
                                FontSize="12" 
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="Code" 
                                FontSize="12" 
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="3">
                    <TextBlock Text="Description" 
                                FontSize="12" 
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="4">
                    <TextBlock Text="Coating Position" 
                                FontSize="12" 
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="5">
                    <TextBlock Text="Glass Position" 
                                FontSize="12" 
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center"/>
                </Grid>

            </Grid>
            <!--#endregion-->


            <!---->
            <!---->
            <!-- Glass Configuration Option 1 -->
            <!---->
            <!---->
            <!--#region -->
            <Grid Grid.Row="1">


                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>

                <!--Option 1 - row 1-->
                <!--#region -->
                <Grid Grid.Row="0" Margin="0" Background="SkyBlue">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3.5*"/>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="2.5*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Grid.Column="3">
                        <CheckBox x:Name="cbSurface1" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="3">
                        <CheckBox x:Name="cbSurface2" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="0">
                        <ComboBox x:Name="cmbType1" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <TextBox x:Name="txtThickness1"  TextChanged="txtThickness1_TextChanged" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="2 2 2 2"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="2">
                        <ComboBox x:Name="cmbCode1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="3">
                        <ComboBox x:Name="cmbDescription1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid x:Name="coatingPosition1" Grid.Row="1" Grid.Column="4" Background="MistyRose"
                           MouseLeftButtonDown="coatingPosition1_MouseLeftButtonDown">
                        <Image x:Name="coatingPosition1Img" 
                                Grid.Column="0" 
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Center"
                                Margin="0"
                                />
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="5" Background="LightGray">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold">Inner Glass</TextBlock>
                    </Grid>

                </Grid >
                <!--#endregion-->

                <!--Option 1 - row 2-->
                <!--#region -->
                <Grid Grid.Row="1" Margin="0 0 0 3" Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="5.5*"/>
                        <ColumnDefinition Width="3.5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="1" Grid.Column="0" Margin="0 16 0 0" Background="Orange" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" >
                            <Label Content="Space" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="5 8 5 9"/>
                        </Grid>
                        <Grid Grid.Column="1" >
                            <TextBox x:Name="txtSpace1" TextChanged="txtSpace1_TextChanged" Height="20" Margin="2 2 2 2" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="8.5*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Background="Lime">
                                <Label Content="Services" HorizontalAlignment="Right" VerticalAlignment="Center" />
                            </Grid>
                            <Grid Grid.Row="1" Background="Orange">
                                <Label Content="Spacer" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                            <Grid Grid.Row="2" Background="LightGray">
                                <Label Content="Seal" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Grid.Column="1" Background="LimeGreen">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                    <TextBlock Padding="8 0 0 0" x:Name="txtBlockServices1" />
                                </ScrollViewer>
                            </Grid>

                            <Grid Grid.Row="1" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width=".8*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0"   Background="Orange"  >
                                    <ComboBox x:Name="cmbSpacerCode1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2 0 1 0"/>
                                </Grid>

                                <Grid Grid.Column="1" Background="Orange">
                                    <ComboBox x:Name="cmbSpacerType1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="1 0 6 0"/>
                                </Grid>

                                <Grid Grid.Column="2" Background="LightGray">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Label Content="Fill(Gap)" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <ComboBox x:Name="cmbFillGas1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="2" Grid.Column="1" Background="LightGray">
                                <ComboBox x:Name="cmbFillSealant1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2 0 0 0"/>
                            </Grid>
                        </Grid>
                    </Grid>

                    <!-- Grid for Bite Value, Low-E Removal, and Edge Services-->
                    <!--#region -->
                    <Grid Grid.Row="1" Grid.Column="2" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <!--Labels - Bite, Low E Removal, Edge Service-->
                        <!--#region -->
                        <Grid Grid.Row="0" Grid.Column="0" Background="LightGray">
                            <Label Content="Side" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8"/>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="1" Background="LightGray">
                            <Label Content="Bite" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8"/>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="2" Background="LightGray">
                            <Label Content="Low E Rmv" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8"/>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="3" Background="LightGray">
                            <Label Content="Step" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8"/>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="4" Background="LightGray">
                            <Label Content="Edge Service" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8"/>
                        </Grid>
                        <!--#endregion-->

                        <!--Top Bite, Low E Removal, Edge Service-->
                        <!--#region -->
                        <Grid Grid.Row="1" Grid.Column="0" >
                            <Image Source="/Images/TopEdgeImg.png"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1" >
                            <TextBox Margin="1 1 1 1" x:Name="txtTopBite1" TextChanged="Panel1EdgesChanged" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="2" >
                            <TextBox Margin="1 1 1 1" x:Name="txtTopLowERmv1" TextChanged="Panel1EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="3" >
                            <TextBox Margin="1 1 1 1" x:Name="txtTopStep1" TextChanged="Panel1EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="4" >
                            <ComboBox x:Name="cmbTopEdgeService1" SelectionChanged="Panel1ComboBoxChanged"/>
                        </Grid>
                        <!--#endregion-->

                        <!--Right Bite, Low E Removal, Edge Service-->
                        <!--#region -->
                        <Grid Grid.Row="2" Grid.Column="0">
                            <Image Source="/Images/RightEdgeImg.png"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="1">
                            <TextBox Margin="1 1 1 1" x:Name="txtRightBite1" TextChanged="Panel1EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="2">
                            <TextBox Margin="1 1 1 1" x:Name="txtRightLowERmv1" TextChanged="Panel1EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="3">
                            <TextBox Margin="1 1 1 1" x:Name="txtRightStep1" TextChanged="Panel1EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="4">
                            <ComboBox x:Name="cmbRightEdgeService1" SelectionChanged="Panel1ComboBoxChanged"/>
                        </Grid>
                        <!--#endregion-->

                        <!--Bottom Bite, Low E Removal, Edge Service-->
                        <!--#region -->
                        <Grid Grid.Row="3" Grid.Column="0">
                            <Image Source="/Images/BottomEdgeImg.png"/>
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="1">
                            <TextBox Margin="1 1 1 1" x:Name="txtBottomBite1" TextChanged="Panel1EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="2">
                            <TextBox Margin="1 1 1 1" x:Name="txtBottomLowERmv1" TextChanged="Panel1EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="3">
                            <TextBox Margin="1 1 1 1" x:Name="txtBottomStep1" TextChanged="Panel1EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="4">
                            <ComboBox x:Name="cmbBottomEdgeService1" SelectionChanged="Panel1ComboBoxChanged"/>
                        </Grid>
                        <!--#endregion-->

                        <!--Left Bite, Low E Removal, Edge Service-->
                        <!--#region -->
                        <Grid Grid.Row="4" Grid.Column="0">
                            <Image Source="/Images/LeftEdgeImg.png"/>
                        </Grid>
                        <Grid Grid.Row="4" Grid.Column="1">
                            <TextBox Margin="1 1 1 1" x:Name="txtLeftBite1" TextChanged="Panel1EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="4" Grid.Column="2">
                            <TextBox Margin="1 1 1 1" x:Name="txtLeftLowERmv1" TextChanged="Panel1EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="4" Grid.Column="3">
                            <TextBox Margin="1 1 1 1" x:Name="txtLeftStep1" TextChanged="Panel1EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="4" Grid.Column="4">
                            <ComboBox x:Name="cmbLeftEdgeService1" SelectionChanged="Panel1ComboBoxChanged"/>
                        </Grid>
                        <!--#endregion-->
                        
                        <!--All Bite, Low E Removal, Edge Service-->
                        <!--#region -->
                        <Grid Grid.Row="5" Grid.Column="0">
                            <Image Source="/Images/AllEdgesImg.png"/>
                        </Grid>
                        <Grid Grid.Row="5" Grid.Column="1">
                            <TextBox Margin="1 1 1 1" x:Name="txtAllBite1" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextChanged="txtAllBite1_TextChanged"/>
                        </Grid>
                        <Grid Grid.Row="5" Grid.Column="2">
                            <TextBox Margin="1 1 1 1" x:Name="txtAllLowERmv1" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextChanged="txtAllLowERmv1_TextChanged"/>
                        </Grid>
                        <Grid Grid.Row="5" Grid.Column="3">
                            <TextBox Margin="1 1 1 1" x:Name="txtAllStep1" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextChanged="txtAllStep1_TextChanged"/>
                        </Grid>
                        <Grid Grid.Row="5" Grid.Column="4">
                            <ComboBox x:Name="cmbAllEdgeService1" SelectionChanged="cmbAllEdgeService1_SelectionChanged"/>
                        </Grid>
                        <!--#endregion-->

                    </Grid>
                    <!--#endregion-->

                </Grid>
                <!--#endregion-->

            </Grid>
            <!--#endregion-->





            <!---->
            <!---->
            <!-- Glass Configuration Option 2 -->
            <!---->
            <!---->
            <!--#region -->
            <Grid Grid.Row="2">


                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>

                <!--Option 1 - row 1-->
                <!--#region -->
                <Grid Grid.Row="0" Margin="0" Background="SkyBlue">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3.5*"/>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="2.5*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Grid.Column="3">
                        <CheckBox x:Name="cbSurface3" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="3">
                        <CheckBox x:Name="cbSurface4" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="0" >
                        <ComboBox x:Name="cmbType2" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <TextBox x:Name="txtThickness2" TextChanged="txtThickness2_TextChanged" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="2 2 2 2" />
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="2" >
                        <ComboBox x:Name="cmbCode2" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="3">
                        <ComboBox x:Name="cmbDescription2" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid x:Name="coatingPosition2" Grid.Row="1" Grid.Column="4" Background="MistyRose"
                           MouseLeftButtonDown="coatingPosition2_MouseLeftButtonDown">
                        <Image x:Name="coatingPosition2Img" 
                                        Grid.Column="0" 
                                        VerticalAlignment="Stretch"
                                        HorizontalAlignment="Center"
                                        Margin="0"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="5" Background="LightGray">
                        <TextBlock x:Name="txtBlockInnerOrOuter2" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>

                </Grid >
                <!--#endregion-->

                <!--Option 1 - row 2-->
                <!--#region -->
                <Grid Grid.Row="1" Margin="0 0 0 3" Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="5.5*"/>
                        <ColumnDefinition Width="3.5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="1" Grid.Column="0" Margin="0 16 0 0" Background="Orange" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" >
                            <Label Content="Space" x:Name="lblSpace2" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="5 8 5 9"/>
                        </Grid>
                        <Grid Grid.Column="1" >
                            <TextBox x:Name="txtSpace2" TextChanged="txtSpace2_TextChanged" Height="20" Margin="2 2 2 2" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="8.5*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Background="Lime">
                                <Label Content="Services" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                            <Grid Grid.Row="1" Background="Orange">
                                <Label Content="Spacer" x:Name="lblSpacer2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                            <Grid Grid.Row="2" Background="LightGray">
                                <Label Content="Seal" x:Name="lblSeal2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Grid.Column="1" Background="LimeGreen">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                    <TextBlock Padding="8 0 0 0" x:Name="txtBlockServices2"/>
                                </ScrollViewer>
                            </Grid>

                            <Grid Grid.Row="1" Grid.Column="1" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width=".8*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Background="Orange" >
                                    <ComboBox x:Name="cmbSpacerCode2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2 0 1 0"/>
                                </Grid>

                                <Grid Grid.Column="1" Background="Orange">
                                    <ComboBox x:Name="cmbSpacerType2" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="1 0 6 0"/>
                                </Grid>

                                <Grid Grid.Column="2" Background="LightGray">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Label Content="Fill(Gap)" x:Name="lblFillGas2" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <ComboBox x:Name="cmbFillGas2" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="2" Grid.Column="1" Background="LightGray">
                                <ComboBox x:Name="cmbFillSealant2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2 0 0 0"/>
                            </Grid>
                        </Grid>
                    </Grid>

                    <!-- Grid for Bite Value, Low-E Removal, and Edge Services-->
                    <!--#region -->
                    <Grid Grid.Row="1" Grid.Column="2" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <!--Labels - Bite, Low E Removal, Edge Service-->
                        <!--#region -->
                        <Grid Grid.Row="0" Grid.Column="0" Background="LightGray">
                            <Label Content="Side" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8"/>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="1" Background="LightGray">
                            <Label Content="Bite" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8"/>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="2" Background="LightGray">
                            <Label Content="Low E Rmv" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8"/>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="3" Background="LightGray">
                            <Label Content="Step" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8"/>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="4" Background="LightGray">
                            <Label Content="Edge Service" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8"/>
                        </Grid>
                        <!--#endregion-->

                        <!--Top Bite, Low E Removal, Edge Service-->
                        <!--#region -->
                        <Grid Grid.Row="1" Grid.Column="0" >
                            <Image Source="/Images/TopEdgeImg.png"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1" >
                            <TextBox Margin="1 1 1 1" x:Name="txtTopBite2" TextChanged="Panel2EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="2" >
                            <TextBox Margin="1 1 1 1" x:Name="txtTopLowERmv2" TextChanged="Panel2EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="3" >
                            <TextBox Margin="1 1 1 1" x:Name="txtTopStep2" TextChanged="Panel2EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="4" >
                            <ComboBox x:Name="cmbTopEdgeService2" SelectionChanged="Panel2ComboBoxChanged"/>
                        </Grid>
                        <!--#endregion-->

                        <!--Right Bite, Low E Removal, Edge Service-->
                        <!--#region -->
                        <Grid Grid.Row="2" Grid.Column="0">
                            <Image Source="/Images/RightEdgeImg.png"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="1">
                            <TextBox Margin="1 1 1 1" x:Name="txtRightBite2" TextChanged="Panel2EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="2">
                            <TextBox Margin="1 1 1 1" x:Name="txtRightLowERmv2" TextChanged="Panel2EdgesChanged"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="3">
                            <TextBox Margin="1 1 1 1" x:Name="txtRightStep2"  TextChanged="Panel2EdgesChanged" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="4">
                            <ComboBox x:Name="cmbRightEdgeService2" SelectionChanged="Panel2ComboBoxChanged"/>
                        </Grid>
                        <!--#endregion-->

                        <!--Bottom Bite, Low E Removal, Edge Service-->
                        <!--#region -->
                        <Grid Grid.Row="3" Grid.Column="0">
