<UserControl x:Class="SPIL.IGUConfigurator.DoubleGlazeVisualComp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GlassConfigurator"
             mc:Ignorable="d" 
             Height="400" Width="150" d:DesignHeight="500" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height=".6*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="2">                
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Image x:Name="imgPanel1Thickness" 
                       Grid.Row="1" 
                       Stretch="Fill" 
                       VerticalAlignment="Stretch"
                       HorizontalAlignment="Stretch"
                       Margin="0"/>
                    <TextBlock x:Name="txtBlockPanel1ThicknessVisual" Grid.Row="0" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                
            </Grid>


            <Grid Grid.Column="3">                
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Image x:Name="imgSpace1Thickness" 
                       Grid.Row="1" 
                       Stretch="Fill" 
                       VerticalAlignment="Stretch"
                       HorizontalAlignment="Stretch"
                       Margin="0"/>
                    <TextBlock x:Name="txtBlockSpace1ThicknessVisual" Grid.Row="0" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                
            </Grid>


            <Grid Grid.Column="4">                
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Image x:Name="imgPanel2Thickness" 
                       Grid.Row="1" 
                       Stretch="Fill" 
                       VerticalAlignment="Stretch"
                       HorizontalAlignment="Stretch"
                       Margin="0"/>
                    <TextBlock x:Name="txtBlockPanel2ThicknessVisual" Grid.Row="0" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                
            </Grid>


        </Grid>

        <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition Width=".5*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Image x:Name="imgSurface1" 
               Grid.Column="0" 
               Stretch="Fill" 
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Margin="0"/>
        </Grid>

        <Grid Grid.Column="2" Background="LightSkyBlue">

        </Grid>

        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0">
                    
                    <Image x:Name="imgSurface2" 
                           Grid.Column="0" 
                           Stretch="Fill" 
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"
                           Margin="0"/>
                    
                </Grid>

                <Grid Grid.Column="2">

                    <Image x:Name="imgSurface3" 
                           Grid.Column="0" 
                           Stretch="Fill" 
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"
                           Margin="0"/>
                    
                </Grid>

            </Grid>

            <Grid Grid.Row="1" Background="Gray">
                <Image x:Name="imgBase" 
               Grid.Column="0" 
               Stretch="Fill" 
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Margin="0"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="4" Background="LightSkyBlue">

        </Grid>

        <Grid Grid.Column="5">
            <Image x:Name="imgSurface4" 
                           Grid.Column="0" 
                           Stretch="Fill" 
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"
                           Margin="0"/>
        </Grid>

        </Grid>



        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width="5.6*"/>                
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Image x:Name="imgOverallThickness" 
               Grid.Row="0" 
               Stretch="Fill" 
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Margin="0"/>
            <TextBlock x:Name="txtBlockOverallThicknessVisual" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
            </Grid>
        </Grid>
        
        
        
    </Grid>
</UserControl>
